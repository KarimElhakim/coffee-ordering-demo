{
  "name": "coffee-ordering-demo",
  "version": "3.0.2",
  "description": "Professional coffee ordering system with real Starbucks menu integration",
  "author": "Karim Elhakim <karimal1896@gmail.com>",
  "publisher": "Karim Elhakim <karimal1896@gmail.com>",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter './apps/*' dev",
    "dev:api": "pnpm --filter './packages/api-server' dev",
    "dev:all": "concurrently \"pnpm dev:api\" \"pnpm dev\"",
    "build": "pnpm --filter './apps/*' build",
    "build:api": "pnpm --filter './packages/api-server' build",
    "lint": "pnpm --filter './apps/*' lint",
    "seed": "pnpm --filter './packages/api-server' seed",
    "seed:old": "pnpm --filter './packages/api-client' seed"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
